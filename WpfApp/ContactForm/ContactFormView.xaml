<UserControl x:Class="WpfApp.ContactForm.ContactFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:contactForm="clr-namespace:WpfApp.ContactForm"
             mc:Ignorable="d"
             d:DesignWidth="400"
             d:DesignHeight="500"
             d:DataContext="{d:DesignInstance Type=contactForm:ContactFormViewModel, IsDesignTimeCreatable=False}"
             Background="{DynamicResource MaterialDesignPaper}">
    <StackPanel VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="300">
        
        <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Text="{Binding Title, Mode=OneTime}"
                   Margin="0 0 0 12"/>
        
        <TextBox Margin="0 12"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 materialDesign:HintAssist.Hint="First Name"
                 IsEnabled="{Binding IsInputEnabled, Mode=OneWay}"
                 Text="{Binding FirstName, Mode=TwoWay, Delay=400, ValidatesOnNotifyDataErrors=True}" />

        <TextBox Margin="0 12"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 materialDesign:HintAssist.Hint="Last Name"
                 IsEnabled="{Binding IsInputEnabled, Mode=OneWay}"
                 Text="{Binding LastName, Mode=TwoWay, Delay=400, ValidatesOnNotifyDataErrors=True}" />

        <TextBox Margin="0 12"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 materialDesign:HintAssist.Hint="Email"
                 IsEnabled="{Binding IsInputEnabled, Mode=OneWay}"
                 Text="{Binding Email, Mode=TwoWay, Delay=400, ValidatesOnNotifyDataErrors=True}" />
        
        <DatePicker Margin="0 12"
                    Style="{StaticResource MaterialDesignFilledDatePicker}"
                    materialDesign:HintAssist.Hint="Date of Birth"
                    IsEnabled="{Binding IsInputEnabled, Mode=OneWay}"
                    SelectedDate="{Binding DateOfBirth, Mode=TwoWay, Delay=400, ValidatesOnNotifyDataErrors=True}"/>
        
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 20 0 0">
            
            <Button Width="100"
                    Style="{StaticResource MaterialDesignPaperButton}"
                    IsCancel="True"
                    Command="{Binding CancelCommand, Mode=OneTime}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Cancel"
                                             VerticalAlignment="Center"/>
                    <TextBlock Text="Cancel"
                               Margin="8 0 0 0"/>
                </StackPanel>
            </Button>
            <Button Width="100"
                    Margin="12 0 0 0"
                    IsDefault="True"
                    Command="{Binding SaveCommand, Mode=OneTime}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Check"
                                             VerticalAlignment="Center"/>
                    <TextBlock Text="Save"
                               Margin="8 0 0 0" />
                </StackPanel>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>